{
  "name": "@douglasneuroinformatics/libui",
  "type": "module",
  "version": "6.0.0",
  "packageManager": "pnpm@10.7.1",
  "description": "Generic UI components for DNP projects, built using React and Tailwind CSS",
  "author": "Joshua Unrau",
  "license": "Apache-2.0",
  "homepage": "https://github.com/DouglasNeuroInformatics/libui#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/DouglasNeuroInformatics/libui"
  },
  "bugs": {
    "url": "https://github.com/DouglasNeuroInformatics/libui/issues"
  },
  "keywords": [
    "React",
    "TailwindCSS"
  ],
  "imports": {
    "#components": {
      "libui-dev": "./src/components/index.js",
      "default": "./dist/components/index.js"
    },
    "#hooks": {
      "libui-dev": "./src/hooks/index.js",
      "default": "./dist/hooks/index.js"
    },
    "#i18n": {
      "libui-dev": "./src/i18n/index.js",
      "default": "./dist/i18n/index.js"
    },
    "#providers": {
      "libui-dev": "./src/providers/index.js",
      "default": "./dist/providers/index.js"
    },
    "#testing:mocks": {
      "libui-dev": "./src/testing/mocks.js"
    },
    "#utils": {
      "libui-dev": "./src/utils/index.js",
      "default": "./dist/utils/index.js"
    }
  },
  "exports": {
    "./components": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.js"
    },
    "./hooks": {
      "types": "./dist/hooks/index.d.ts",
      "import": "./dist/hooks/index.js"
    },
    "./i18n": {
      "types": "./dist/i18n/index.d.ts",
      "import": "./dist/i18n/index.js"
    },
    "./package.json": "./package.json",
    "./providers": {
      "types": "./dist/providers/index.d.ts",
      "import": "./dist/providers/index.js"
    },
    "./tailwind/globals.css": "./dist/tailwind/globals.css",
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js"
    }
  },
  "files": [
    "!/src/**/*.spec.*",
    "!/src/**/*.stories.*",
    "!/src/**/*.test.*",
    "/dist",
    "/src",
    "/tailwind.config.cjs",
    "/tailwind.config.d.cts"
  ],
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "build": "rm -rf dist && tsc -b tsconfig.build.json && cp -r src/tailwind dist/tailwind",
    "format": "prettier --write src",
    "format:translations": "find src/i18n/translations -name '*.json' -exec pnpm exec sort-json {} \\;",
    "lint": "tsc && eslint --fix src",
    "prepare": "husky",
    "storybook": "storybook dev --no-open -p 6006",
    "storybook:build": "storybook build",
    "test": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "peerDependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^4.1.0",
    "zod": "^3.25.x"
  },
  "dependencies": {
    "@douglasneuroinformatics/libjs": "^3.0.2",
    "@douglasneuroinformatics/libui-form-types": "^0.11.0",
    "@radix-ui/react-accordion": "^1.2.3",
    "@radix-ui/react-alert-dialog": "^1.1.6",
    "@radix-ui/react-avatar": "^1.1.3",
    "@radix-ui/react-checkbox": "^1.1.4",
    "@radix-ui/react-collapsible": "^1.1.3",
    "@radix-ui/react-context-menu": "^2.2.6",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-hover-card": "^1.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-menubar": "^1.1.6",
    "@radix-ui/react-popover": "^1.1.6",
    "@radix-ui/react-progress": "^1.1.2",
    "@radix-ui/react-radio-group": "^1.2.3",
    "@radix-ui/react-scroll-area": "^1.2.3",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slider": "^1.2.3",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-switch": "^1.1.3",
    "@radix-ui/react-tabs": "^1.1.3",
    "@radix-ui/react-tooltip": "^1.1.8",
    "@tanstack/react-table": "^8.21.3",
    "@tanstack/table-core": "^8.21.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lodash-es": "^4.17.21",
    "lucide-react": "^0.486.0",
    "motion": "^11.18.2",
    "react-dropzone": "^14.3.8",
    "react-error-boundary": "^4.1.2",
    "react-resizable-panels": "^2.1.7",
    "recharts": "^2.15.1",
    "tailwind-merge": "^2.6.0",
    "ts-pattern": "^5.7.0",
    "tw-animate-css": "^1.2.5",
    "type-fest": "^4.39.0",
    "vaul": "^1.1.2",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@douglasneuroinformatics/eslint-config": "^5.3.7",
    "@douglasneuroinformatics/prettier-config": "^0.3.0",
    "@douglasneuroinformatics/semantic-release": "^0.2.1",
    "@douglasneuroinformatics/tsconfig": "^1.0.5",
    "@faker-js/faker": "^9.6.0",
    "@storybook/addon-docs": "^9.0.6",
    "@storybook/addon-links": "^9.0.6",
    "@storybook/icons": "^1.4.0",
    "@storybook/react-vite": "^9.0.6",
    "@tailwindcss/vite": "^4.1.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/culori": "^2.1.1",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "22.x",
    "@types/react": "^19.0.12",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react-swc": "^3.10.1",
    "@vitest/coverage-v8": "^3.1.1",
    "culori": "^4.0.1",
    "eslint": "^9.23.0",
    "happy-dom": "^17.4.4",
    "husky": "^9.1.7",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "sort-json": "^2.0.1",
    "storybook": "^9.0.6",
    "tsup": "^8.4.0",
    "typescript": "5.9.x",
    "vite": "^6.3.5",
    "vitest": "^3.1.1"
  },
  "commitlint": {
    "extends": [
      "@douglasneuroinformatics/semantic-release/commitlint-config"
    ]
  },
  "release": {
    "extends": [
      "@douglasneuroinformatics/semantic-release"
    ]
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@swc/core",
      "@tailwindcss/oxide",
      "esbuild"
    ]
  }
}
