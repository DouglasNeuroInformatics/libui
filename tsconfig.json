{
  "extends": ["@douglasneuroinformatics/tsconfig"],
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "customConditions": ["libui-dev"],
    "jsx": "react-jsx",
    "lib": ["DOM", "ESNext", "ESNext.Decorators"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmit": true,
    "resolveJsonModule": true,
    "target": "ES2022",
    "types": ["vite/client", "vitest"]
  },
  "include": [
    "__mocks__/**/*",
    ".storybook/**/*",
    "src/**/*",
    "eslint.config.js",
    "prettier.config.js",
    "tailwind.config.cjs",
    "tsup.config.mts",
    "vite.config.mts",
    "vitest.config.mts"
  ]
}
